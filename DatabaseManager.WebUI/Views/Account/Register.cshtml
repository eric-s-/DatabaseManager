@model DatabaseManager.WebUI.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_NotAuthenticatedLayout.cshtml";
}

<div class="container">
    <div id="registerbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-heading">Register</div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="form">
                    @Html.ValidationSummary()

                    <div class="form-group" style="margin-bottom: 25px">
                        <label for="Username">Username</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                    </div> 
            
                    <div class="control-group" style="margin-bottom: 25px">
                        <label>Password</label>
                        @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control", placeholder = "Password" })
                    </div>
                    
                    <div class="control-group" style="margin-bottom: 25px">
                        <label>Re-enter Password</label>
                        @Html.TextBoxFor(m => m.ReEnteredPassword, new { type = "password", @class = "form-control", placeholder = "Password" })
                    </div> 
            
                    <input type="submit" value="Sign Up" class="btn btn-success" />
                    <hr />
                    <div> 
                        @Html.ActionLink("Sign In", "Login")
                    </div>
                        </div>
                }
            </div>
        </div>
    </div>
</div>

